{
  "compilerOptions": {
    "target": "es2020",
    // "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./scripts",
      "./test"
    ],
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./test",
    "./src",
    "./scripts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
